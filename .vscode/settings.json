{
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,

  // python
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.rulers": [88]
  },
  "black-formatter.args": ["--line-length", "88"],
  "flake8.args": ["--max-line-length=88", "--ignore=E203,W503,W504"]
}
